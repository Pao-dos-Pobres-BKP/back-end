{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "collectCoverageFrom": [
    "src/use-cases/**/*.ts"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "@test/(.*)$": [
      "<rootDir>/test/$1"
    ],
    "@domain/(.*)$": [
      "<rootDir>/src/domain/$1"
    ],
    "@application/(.*)$": [
      "<rootDir>/src/use-cases/$1"
    ],
    "@infra/(.*)$": [
      "<rootDir>/src/infra/$1"
    ]
  }
}